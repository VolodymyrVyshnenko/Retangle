<Window x:Class="Retangle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retangle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="rectangle" Width="0" Height="0" Background='Aqua' Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,225">
            <Canvas.RenderTransform>
                <RotateTransform></RotateTransform>
            </Canvas.RenderTransform>
        </Canvas>
        <TextBox x:Name="StartSize" HorizontalAlignment="Left" Height="30" Margin="10,50,0,0" Text="     Длина стороны" VerticalAlignment="Top" Width="290" FontSize="18"/>
        <TextBox x:Name="StartHigh" HorizontalAlignment="Right" Height="30" Margin="0,50,9.6,0"  Text="     Высота стороны" VerticalAlignment="Top" Width="290" FontSize="20"/>
        <Button x:Name="Start1" Height="30" Content="Начать" Margin="340,50,339.6,0" Click="Start_Click" VerticalAlignment="Top" RenderTransformOrigin="0.496,0.668" />
        <Button x:Name="Switcher" Height="0" Width="0" VerticalAlignment="Top" Content="Switch" Click="Switch_Click" Margin="350,300,343.6,0" />


    </Grid>
</Window>
